# Note: the V8 package looks in a weird place under BREWDIR/opt/v8
if [ $(arch | grep arm) ]; then
bottle="https://autobrew.github.io/archive/arm64_big_sur/v8-9.6.180.12-arm64_big_sur.tar.xz"
else
bottle="https://autobrew.github.io/archive/catalina/v8-9.6.180.12-catalina.tar.xz"
fi

# Skip if disabled
if [ "$DISABLE_AUTOBREW" ]; then return 0; fi
BREWDIR="$PWD/.deps"

if [ ! -f ".deps/lib/libv8_monolith.a" ]; then
  mkdir -p $BREWDIR
  curl -sSL $bottle -o libs.tar.xz
  tar -xf libs.tar.xz --strip 1 -C $BREWDIR
  rm -f libs.tar.xz

  # package may look for /opt
  mkdir -p $BREWDIR/opt/v8
  ln -s $BREWDIR/{include,lib} $BREWDIR/opt/v8/
  ln -s $BREWDIR/lib $BREWDIR/opt/v8/libexec
fi

# Hardcoded flags
PKG_LIBS="-L$BREWDIR/lib -lv8"
PKG_CFLAGS="-I$BREWDIR/include"