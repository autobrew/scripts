# Find a bundle
if [ $(arch | grep arm) ]; then
bottle="https://dl.bintray.com/autobrew/arm64_big_sur/protobuf-3.14.0-arm64_big_sur.tar.xz"
elif [[ ${OSTYPE:6} -ge 20 ]]; then
bottle="https://dl.bintray.com/autobrew/big_sur/protobuf-3.14.0-big_sur.tar.xz"
elif [[ ${OSTYPE:6} -ge 17 ]]; then
bottle="https://dl.bintray.com/autobrew/high_sierra/protobuf-3.12.4-high_sierra.tar.xz"
else
bottle="https://dl.bintray.com/autobrew/el_capitan/protobuf-3.12.4-el_capitan.tar.xz"
fi

# General setup
BREWDIR="$PWD/.autobrew"
mkdir -p $BREWDIR
curl -sSL $bottle -o libs.tar.xz
tar -xf libs.tar.xz --strip 1 -C $BREWDIR
rm -f libs.tar.xz

# Export flags
PKG_CFLAGS="-DUSENEWAPI -I$BREWDIR/include"
PKG_LIBS="-L$BREWDIR/lib -lprotobuf"
PATH="$BREWDIR/bin:$PATH"

# Many packages expect ./opt/protobuf/bin/protoc
mkdir -p "$BREWDIR/opt"
ln -s $BREWDIR "$BREWDIR/opt/protobuf"

# Workaround for protolite, remove when fixec
echo "exit 0;" > "$BREWDIR/bin/pkg-config"
chmod +x "$BREWDIR/bin/pkg-config"

# Workaround for cld3 which does not use CXX11STD in configure pretest
if [ "$R_PACKAGE_NAME" = "cld3" ];then
PKG_TEST_HEADER="<string.h>"
fi
